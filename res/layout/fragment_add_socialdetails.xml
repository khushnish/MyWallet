<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3" >

            <com.khushnish.mywallet.utils.TextViewRoboto
                android:id="@+id/fragment_add_socialdetails_txt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:singleLine="true"
                android:text="@string/add_socialdetails_name"
                android:textSize="12sp" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_add_socialdetails_edt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:hint="@string/add_socialdetails_name"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3" >

            <com.khushnish.mywallet.utils.TextViewRoboto
                android:id="@+id/fragment_add_socialdetails_txt_emailaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:singleLine="true"
                android:text="@string/add_socialdetails_emailaddress"
                android:textSize="12sp" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_add_socialdetails_edt_emailaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:hint="@string/add_socialdetails_emailaddress"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3" >

            <com.khushnish.mywallet.utils.TextViewRoboto
                android:id="@+id/fragment_add_socialdetails_txt_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:singleLine="true"
                android:text="@string/add_socialdetails_password"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="3" >

                <com.khushnish.mywallet.utils.EditTextRoboto
                    android:id="@+id/fragment_add_socialdetails_edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_socialdetails_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <com.khushnish.mywallet.utils.CheckBoxRoboto
                    android:id="@+id/fragment_add_socialdetails_chk_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/add_socialdetails_show_password"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />
    </LinearLayout>

</ScrollView>

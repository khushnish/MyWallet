<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <com.khushnish.mywallet.utils.TextViewRoboto
            android:id="@+id/fragment_settings_txt_currentpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_password"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_currentpassword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_currentpassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_currentpassword3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_currentpassword4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.khushnish.mywallet.utils.TextViewRoboto
            android:id="@+id/fragment_settings_txt_newpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_password"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_newpassword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_newpassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_newpassword3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_newpassword4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <com.khushnish.mywallet.utils.TextViewRoboto
            android:id="@+id/fragment_settings_txt_confirmpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/confirm_password"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_confirmpassword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_confirmpassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_confirmpassword3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />

            <com.khushnish.mywallet.utils.EditTextRoboto
                android:id="@+id/fragment_settings_edt_confirmpassword4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="@dimen/abc_action_bar_subtitle_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>